<div class="bg-white shadow-lg rounded-lg p-6">
  <div class="flex justify-between items-start mb-4">
    <h3 class="text-lg font-semibold text-gray-900">
      <%= link_to habit_path(habit), class: "underline" do %>
        <%= habit.title %>
      <% end %>
    </h3>
    <div>
      <%= frequency_badge(habit) if habit.frequency.present? %>
    </div>
  </div>
  <% if habit.description.present? %>
    <p class="text-sm text-gray-400">
      <%= habit.description.to_plain_text.truncate(50) %>
    </p>
  <% end %>
  <% if habit.completed? %>
    <div class="mt-3 flex justify-end">
      <svg class="w-6 h-6 text-green-400 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
        <path fill-rule="evenodd" d="M2 12C2 6.477 6.477 2 12 2s10 4.477 10 10-4.477 10-10 10S2 17.523 2 12Zm13.707-1.293a1 1 0 0 0-1.414-1.414L11 12.586l-1.793-1.793a1 1 0 0 0-1.414 1.414l2.5 2.5a1 1 0 0 0 1.414 0l4-4Z" clip-rule="evenodd"/>
      </svg>
    </div>
  <% end %>
</div>
